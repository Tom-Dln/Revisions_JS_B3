<h1 class="text-center">
    Liste des Leçons
</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Matière</th>
            <th scope="col">Durée</th>
        </tr>
    </thead>
    <tbody>
        {{#each lessons}}
        <tr>
            <td scope="col">
                {{this.name}}
            </td>
            <td scope="col">
                {{this.duration}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>