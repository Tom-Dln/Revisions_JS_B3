<h1 class="text-center my-5">
    Liste des Parents
</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Prénom/Nom</th>
            <th scope="col">Age</th>
            <th scope="col">Enfant</th>
            <th scope="col">Détails</th>
        </tr>
    </thead>
    <tbody>
        {{#each parents}}
        <tr>
            <td scope="col">
                {{this.name}}
            </td>
            <td scope="col">
                {{this.age}} ans
            </td>
            <td scope="col">
                <a href="/student/{{this.student.id}}">{{this.student.name}}</a>
            </td>
            <td scope="col">
                <a href="/parent/{{this.id}}"><i class="fa-solid fa-arrow-up-right-from-square"></i> Voir</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>