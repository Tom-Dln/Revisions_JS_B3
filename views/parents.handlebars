<h1 class="text-center">
    Liste des Parents
</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Prénom/Nom</th>
            <th scope="col">Age</th>
            <th scope="col">Enfants</th>
            <th scope="col">Détails</th>
        </tr>
    </thead>
    <tbody>
        {{#each parents}}
        <tr>
            <td scope="col">
                {{this.name}}
            </td>
            <td scope="col">
                {{this.age}} ans
            </td>
            <td scope="col">
                <a href="/student/{{this.childId}}">Voir</a>
            </td>
            <td scope="col">
                <a href="/parent/{{this.id}}">Voir</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>